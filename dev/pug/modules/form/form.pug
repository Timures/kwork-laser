form.delivery-form
  .customer-name
      .form__title Имя
      .form__inputs
        input(class='form__input delivery-form__input--name' type='text' name='delivery-form__name')
  .customer-contacts
      .form-row
        .customer-phone
          .form__title Номер телефона
          .form__inputs
            input(class='form__input delivery-form__input--phone' type='phone' name='delivery-form__phone')
        .customer-email
                .form__title Эл. почта
                .form__inputs
                  input(class='form__input delivery-form__input--email' type='email' name='delivery-form__adress')
  .customer-extra
    .form-row
      .customer-promocod
        .form__title Введите промокод (при наличии)
        .form-row
          .form__inputs
            input(class='form__input form__input--danger delivery-form__input--promocod' type='email' name='delivery-form__adress')
          .form__alert.form__alert--danger
            span.delivery-form__alert Промокод введён неверно
  .customer-comment
    .form__title Примечания
    .form__inputs
      textarea(class='form__input delivery-form__input--comment' name='customer-comment' row='10' cols='45')

